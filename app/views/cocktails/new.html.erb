<div class="container">

  <div class="card p-5 m-5">
    <h1>Add Cocktail</h1>
    <%= simple_form_for [ @cocktail ] do |f| %>
      <%= f.input :name %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
