<div class="container">

  <div class="card p-5 m-5" id="dose-form">
    <h1>coucou</h1>
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
